#!/bin/sh

default=""
for i in $PCMCIADIR `echo $LINUXDIR/pcmcia*`; do
    if [ -r $i ]; then
	default=$i
    fi
done

echo -n "Enter location of PCMCIA source tree [$default]: "
read PCMCIADIR
: ${PCMCIADIR:=$default}

if [ -r $PCMCIADIR ]; then
    echo using PCMCIADIR=$PCMCIADIR
else
    echo not configuring PCMCIA support
fi
